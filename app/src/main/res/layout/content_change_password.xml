<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.anshu.cognitio.ChangePassword"
    tools:showIn="@layout/activity_change_password">
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/current_pwd"
        android:hint="@string/current_pwd"
        android:maxLines="1" android:singleLine="true"
        android:layout_marginTop="20dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/new_pwd"
        android:hint="@string/new_pwd"
        android:maxLines="1" android:singleLine="true"
        android:layout_below="@+id/current_pwd"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/var_new_pwd"
        android:hint="@string/var_new_pwd"
        android:maxLines="1" android:singleLine="true"
        android:layout_below="@+id/new_pwd"/>
    <Button android:id="@+id/chan_pwd"
        android:layout_width="match_parent" android:layout_height="wrap_content"
         android:text="@string/chan_pwd"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:background="#3b5998"
        android:layout_below="@+id/var_new_pwd"/>

</RelativeLayout>
