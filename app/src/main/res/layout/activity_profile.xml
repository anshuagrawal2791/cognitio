<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.anshu.cognitio.ProfileActivity"
   >






    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:weightSum="1"
        android:id="@+id/linearLayout">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="400dp"
            android:layout_weight="0.50">
            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/dp"
                android:layout_width="196dp"
                android:layout_height="196dp"
                app:civ_border_width="2dp"
                app:civ_border_color="#FF000000"/>


            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Update "
                android:id="@+id/update_dp"
                android:layout_below="@+id/dp"
                android:layout_marginLeft="49dp"
                android:layout_marginStart="49dp" />
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.50">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Name"
                    android:id="@+id/textView"
                    android:layout_weight="0.2" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:text="Name"
                    android:ems="10"
                    android:id="@+id/name"
                    android:layout_weight="0.5" />


            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Class"
                    android:id="@+id/textView2"
                    android:layout_weight="1" />

                <fr.ganfra.materialspinner.MaterialSpinner
                    android:id="@+id/classsp"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    app:ms_multiline="false"
                    app:ms_hint="Select Class"
                    app:ms_enableFloatingLabel="true"
                    app:ms_enableErrorLabel="true"
                    app:ms_floatingLabelText="Class"
                    app:ms_baseColor="@color/colorAccent"
                    app:ms_highlightColor="@color/colorAccent"
                    app:ms_errorColor="@color/error"

                    app:ms_thickness="1dp"
                    app:ms_hintColor="@color/hint"
                    app:ms_arrowColor="@color/base"
                    app:ms_arrowSize="8dp"
                    app:ms_alignLabels="false"
                    app:ms_floatingLabelColor="@color/colorAccent"
                    android:layout_weight="1" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="City"
                    android:id="@+id/textView3"
                    android:layout_weight="1" />

                <fr.ganfra.materialspinner.MaterialSpinner
                    android:id="@+id/citysp"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    app:ms_multiline="false"
                    app:ms_hint="Select City"
                    app:ms_enableFloatingLabel="true"
                    app:ms_enableErrorLabel="true"
                    app:ms_floatingLabelText="City"
                    app:ms_baseColor="@color/colorAccent"
                    app:ms_highlightColor="@color/colorAccent"
                    app:ms_errorColor="@color/error"

                    app:ms_thickness="1dp"
                    app:ms_hintColor="@color/hint"
                    app:ms_arrowColor="@color/base"
                    app:ms_arrowSize="8dp"
                    app:ms_alignLabels="false"
                    app:ms_floatingLabelColor="@color/colorAccent"
                    android:layout_weight="1" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Statistics"
        android:id="@+id/stats"
        android:layout_below="@+id/linearLayout"
        android:layout_alignRight="@+id/linearLayout"
        android:layout_alignEnd="@+id/linearLayout"
        android:layout_marginRight="259dp"
        android:layout_marginEnd="259dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:id="@+id/updateprofile"
        android:layout_below="@+id/linearLayout"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>