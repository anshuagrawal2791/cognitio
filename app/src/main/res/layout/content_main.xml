<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main"
    tools:context=".MainActivity">





    <fr.ganfra.materialspinner.MaterialSpinner
        android:id="@+id/classsp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        app:ms_multiline="false"
        app:ms_hint="Select Class"
        app:ms_enableFloatingLabel="true"
        app:ms_enableErrorLabel="true"
        app:ms_floatingLabelText="Class"
        app:ms_baseColor="@color/colorAccent"
        app:ms_highlightColor="@color/colorAccent"
        app:ms_errorColor="@color/error"

        app:ms_thickness="1dp"
        app:ms_hintColor="@color/hint"
        app:ms_arrowColor="@color/base"
        app:ms_arrowSize="8dp"
        app:ms_alignLabels="false"
        app:ms_floatingLabelColor="@color/colorAccent"/>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/classsp"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
    <it.gmariotti.cardslib.library.view.CardViewNative
        android:id="@+id/carddemo_largeimage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        card:card_layout_resourceID="@layout/native_material_largeimage_card"
        style="@style/card_external"
        android:layout_below="@+id/classsp"

        />

    <it.gmariotti.cardslib.library.view.CardViewNative
        android:id="@+id/carddemo_largeimage2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card:card_layout_resourceID="@layout/native_material_largeimage_card"
        style="@style/card_external"
        android:layout_below="@+id/carddemo_largeimage"
        />
            <it.gmariotti.cardslib.library.view.CardViewNative
        android:id="@+id/carddemo_largeimage3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card:card_layout_resourceID="@layout/native_material_largeimage_card"
        style="@style/card_external"
        android:layout_below="@+id/carddemo_largeimage2"
        />
            <it.gmariotti.cardslib.library.view.CardViewNative
        android:id="@+id/carddemo_largeimage4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card:card_layout_resourceID="@layout/native_material_largeimage_card"
        style="@style/card_external"
        android:layout_below="@+id/carddemo_largeimage3"
        />

        </LinearLayout>

    </ScrollView>
</RelativeLayout>
